
<%

journals_map = @journals_map || {}

%>


<div class="jumbotron jumbotron-cover">
    <div class="llayer-1" style="position: absolute; left: 0; top: 0; width: 100%; height: 100%; display: flex; flex-direction: column; justify-content: center;">
      <div class="ccontainer text-xs-center llayer-2">

        <h1 class="display-5">Система онлайн-рецензирования</h1>

        <div style="display: flex; flex-wrap: wrap; justify-content: center;">
            <% if journals_map[1] %>
                <div style="min-width: 200px; margin: 0 15px; padding: 10px;">
                    <h4>Журнал &laquo;Гироскопия и Навигация&raquo;</h4>
            
                    <p class=issn>
                        ISSN 0869-7035 (print),
                        ISSN 2075-0927 (online)<br>
                        <%= link_to "Сайт журнала", 'http://elektropribor.spb.ru/gn', class: 'cover-link' %>
                    </p>
            
                    <p>
                        <a class="btn btn-primary bbtn-sm" href="<%= journal_office_path(1) %>" role="button">Войти</a>
                    </p>
                </div>
            <% end %>
            <% if journals_map[2] %>
                <div style="min-width: 200px; margin: 0 15px; padding: 10px;">
                    <h4>Конференция молодых ученых &laquo;Навигация и управление движением&raquo;</h4>
            
                    <p class=issn>
                        <%= link_to "Сайт конференции", 'http://www.elektropribor.spb.ru/nauchnaya-deyatelnost/konferentsii/1243/', class: 'cover-link' %>
                    </p>
            
                    <p>
                        <a class="btn btn-primary bbtn-sm" href="<%= journal_office_path(2) %>" role="button">Войти</a>
                    </p>
                </div>
            <% end %>
        </div>
    
      </div>

    </div>
</div>

