

<div class="card card-default ccard-primary ccard-inverse">
  <!--div class="panel-body"-->
    <div class="card-block">
    <!--div class="card-header"-->
        <h4 class="ccard-title"><%= t('journal.submission_form.paper_metadata') %></h4>
    <!--/div-->

    <%= form_for(@submission, url: @submission.persisted? ? submission_path(@submission) : submissions_path, :html => { :class => "fform-horizontal", :role => "form" }) do |f| %>
        <%#= render partial: 'common/forms/form_error_alert', locals: {form_model: @journal_submission} %>
        <%#= f.hidden_field :journal_id, :class => "form-control" %>
        <div class="form-group row">
            <%= f.label t('journal.submission_form.title'), :class => "col-sm-2 control-label" %>
            <div class="col-sm-10">
                <%= f.text_field :title, :class => "form-control" %>
            </div>
        </div>
  <div class="form-group row">
    <%= f.label t('journal.submission_form.abstract'), :class => "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_area :abstract, :class => "form-control", :rows => 6 %>
    </div>
  </div>

  <% if policy(@submission).update? or not @submission.persisted? %>
  <div class="form-group row">
    <div class="col-sm-offset-2 col-sm-10">
      <%#= f.submit :class => "btn btn-primary" %>
      <%= f.button :class => "btn btn-success" do %>
        <i class="fa fa-check fa-lg"></i>
        <%= t('journal.submission_form.save_'+(@submission.persisted? ? 'update' : 'new') ) %>
      <% end %>
    </div>
  </div>
  <% end %>

<% end %>

</div>

