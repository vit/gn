

<div class="card card-default ccard-primary ccard-inverse">
    <div class="card-block">
    <!--div class="card-header"-->
        <!--h4 class="ccard-title"><%= t('journal.submission_form.paper_metadata') %></h4-->
    <!--/div-->
        <%= form_for(@submission_text, method: @submission.persisted? ? :put : :post ,url: @submission.persisted? ? submission_path(@submission) : submissions_path, :html => { :class => "fform-horizontal", :role => "form" }) do |f| %>
          <div class="form-group row">
            <%= f.label t('journal.submission_form.title'), :class => "col-sm-2 control-label" %>
            <div class="col-sm-10">
              <%= f.text_field :title, :class => "form-control" %>
            </div>
          </div>
          <div class="form-group row">
            <%= f.label t('journal.submission_form.abstract'), :class => "col-sm-2 control-label" %>
              <div class="col-sm-10">
              <%= f.text_area :abstract, :class => "form-control", :rows => 6 %>
            </div>
          </div>

          <% if policy(@submission).update_metadata? or not @submission.persisted? %>
            <div class="fform-group rrow">

              <div cclass="col-sm-offset-2 col-sm-10" class="float-xs-right">
                <%= f.button :class => "btn btn-success ffloat-xs-right" do %>
                  <i class="fa fa-check fa-lg"></i>
                  <%= t('journal.submission_form.save_'+(@submission.persisted? ? 'update' : 'new') ) %>
                <% end %>
              </div>

              <div cclass="col-sm-offset-2 col-sm-10" class="float-xs-right">
                <%= link_to submission_path(@submission),
                    #method: :get,
                    class: "btn btn-secondary float-xs-right",
                    a: :b do
                %>
                    <%= fa_icon 'arrow-left' %>
                    <%= t('journal.submissions.authors.back_to_paper') %>
                <% end if @submission.persisted? %>

              </div>

            </div>
          <% end %>
        <% end %>

    </div>
</div>

