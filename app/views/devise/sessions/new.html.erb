
<div class="container-fluid">

    <div class="row">
        <div class="col-md-6 offset-md-3">


<div class="card">
  <div class="card-header">

            <div id="alerts-block" class="text-xs-center">
                <% unless notice.nil? %>
                    <p class="notice"><%= notice %></p>
                <% end %>
                <% unless alert.nil? %>
                    <p class="alert"><%= alert %></p>
                <% end %>
            </div>


    <h2 class="card-title"><%= t('user.sign_in') %></h2>
<p class="card-text">
  <%= translate_with_link('user.sign_up_link_not_registered', new_registration_path(resource_name)) %><br />
</p>

  </div>
  <div class="card-block">

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>
  <div class="form-group">
<!--    <%#= f.label :email, for: 'password_field', cclass: "sr-only" %><br /> -->
    <%= f.email_field :email, autofocus: true, class: "form-control", id: "email_field", placeholder: t('helpers.label.user.email') %>
  </div>
  <div class="form-group">
<!--    <%#= f.label :password, for: 'password_field', cclass: "sr-only" %><br /> -->
    <%= f.password_field :password, autocomplete: "off", class: "form-control", id: "password_field", placeholder: t('helpers.label.user.password') %>
  </div>
  
  <% if devise_mapping.rememberable? -%>
    <div class="checkbox">
      <%= f.label :remember_me do %>
        <%= f.check_box :remember_me, checked: true %> <%= t('helpers.label.user.remember_me') %>
      <%end  %>
    </div>
  <% end -%>

  <div class="form-group">
    <%= f.submit t('helpers.label.user.sign_in'), class: 'btn btn-success' %>
  </div>
<% end %>


  </div>
<!--/div-->

<!--div class="panel panel-default">
  <div class="panel-body"-->
  <div class="card-footer">
<%= render "devise/shared/links" %>
  </div>
</div>

    </div>
  </div>
</div>

