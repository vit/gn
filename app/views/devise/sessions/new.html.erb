
<div class="container">

    <div class="row">
        <div class="col-md-6 offset-md-3">


<div class="panel panel-default">
  <div class="panel-body">
  <!--div class="panel-heading"-->
    <h2>Log in</h2>
  <!--/div>
  <div class="panel-body"-->

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>
  <div class="form-group">
<!--    <%#= f.label :email, for: 'password_field', cclass: "sr-only" %><br /> -->
    <%= f.email_field :email, autofocus: true, class: "form-control", id: "email_field", placeholder: "Email" %>
  </div>
  <div class="form-group">
<!--    <%#= f.label :password, for: 'password_field', cclass: "sr-only" %><br /> -->
    <%= f.password_field :password, autocomplete: "off", class: "form-control", id: "password_field", placeholder: "Password" %>
  </div>
  
  <% if devise_mapping.rememberable? -%>
    <div class="checkbox">
      <%= f.label :remember_me do %>
        <%= f.check_box :remember_me, checked: true %> Remember me
      <%end  %>
    </div>
  <% end -%>

  <div class="form-group">
    <%= f.submit "Log in", class: 'btn btn-primary' %>
  </div>
<% end %>


  </div>
<!--/div-->

<!--div class="panel panel-default">
  <div class="panel-body"-->
  <div class="panel-footer">
<%= render "devise/shared/links" %>
  </div>
</div>

    </div>
  </div>
</div>

