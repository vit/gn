
<% content_for :content do %>
    <%#= render partial: 'office_base/left_sidebar' %>
    <%= render partial: @journal ? 'office_base/left_sidebar' : 'office_base/left_sidebar_nojournal' %>
    <div id="main-block">
        <%= render partial: 'office_base/nav' %>
        <main>
            <div id="alerts-block" class="text-xs-center">
                <% unless notice.nil? %>
                    <p class="notice"><%= notice %></p>
                <% end %>
                <% unless alert.nil? %>
                    <p class="alert"><%= alert %></p>
                <% end %>
            </div>
            <%= yield %>
        </main>
    </div>
<% end %>


<%= render template: "layouts/application" %>

